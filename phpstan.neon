includes:
  - vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
  level: 5
  phpVersion: 70400

  paths:
    - src
    - tests

  excludePaths:
    - vendor

  bootstrapFiles:
    - vendor/yiisoft/yii2/Yii.php

  checkMissingVarTagTypehint: true
  treatPhpDocTypesAsCertain: false

  ignoreErrors:
     - '#Access to an undefined property (.*)modelClass.#'
